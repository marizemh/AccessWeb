{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"sourceMap": true,
		"outDir": "./dist",
		"noImplicitAny": false,
		"types": ["reflect-metadata", "mocha", "node"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./",
		"paths": {
			"@server/*": ["dist/server/*"],
			"@shared/*": ["dist/shared/*"]
		}
	},
	"exclude": ["node_modules", "**/*.test.ts"],
	"include": ["./**/*.js", "dist/server/**/*.js", "dist/shared/**/*.js"]
}
