{
	"name": "server",
	"version": "1.0.0",
	"description": "DevOps Self-Service backend",
	"scripts": {
		"clean": "rm -Rf dist",
		"build": "yarn tsc && resolve-tspaths --project tsconfig.compile.json",
		"tsc": "tsc --project tsconfig.compile.json && sh scripts/post-compile.sh",
		"tsc:w": "tsc --project tsconfig.json -w && sh scripts/post-compile.sh",
		"start": "DOTENV_CONFIG_PATH=.env tsnd --inspect --ignore-watch node_modules --respawn --transpile-only -r dotenv/config -r tsconfig-paths/register src/index.ts",
		"start:prod": "node -r dotenv/config dist/server/src/index.js",
		"test": "yarn test:lint && yarn test:coverage",
		"test:unit": "cross-env NODE_ENV=test mocha",
		"test:coverage": "cross-env NODE_ENV=test nyc mocha",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
		"migration:create": "npm run typeorm -- migration:create -c db --config src/config/typeorm/ormconfig.ts --name ",
		"migration:status": "npm run typeorm -- migration:show -c db --config src/config/typeorm/ormconfig.ts",
		"migration:up": "npm run typeorm -- migration:run -c db --config src/config/typeorm/ormconfig.ts",
		"migration:down": "npm run typeorm -- migration:revert -c db --config src/config/typeorm/ormconfig.ts"
	},
	"dependencies": {
		"@tsed/ajv": "6.34.3",
		"@tsed/common": "6.34.3",
		"@tsed/core": "6.34.3",
		"@tsed/di": "6.34.3",
		"@tsed/exceptions": "6.34.3",
		"@tsed/json-mapper": "6.34.3",
		"@tsed/platform-express": "6.34.3",
		"@tsed/schema": "6.34.3",
		"@tsed/swagger": "6.34.3",
		"@tsed/typeorm": "6.34.3",
		"ajv": "7.2.1",
		"body-parser": "1.19.0",
		"compression": "1.7.4",
		"cookie-parser": "1.4.5",
		"cors": "2.8.5",
		"crypto-js": "4.0.0",
		"dotenv": "8.2.0",
		"express": "4.17.1",
		"method-override": "3.0.0",
		"node-nlp": "3.10.2",
		"pg": "8.5.1",
		"typedjson": "1.7.0",
		"typeorm": "0.2.31",
		"typeorm-naming-strategies": "2.0.0"
	},
	"devDependencies": {
		"@tsed/cli-plugin-mocha": "2.11.0",
		"@tsed/cli-plugin-typeorm": "2.11.0",
		"@types/chai": "4.2.15",
		"@types/chai-as-promised": "7.1.3",
		"@types/compression": "1.7.0",
		"@types/cookie-parser": "1.4.2",
		"@types/cors": "2.8.10",
		"@types/express": "4.17.11",
		"@types/method-override": "0.0.31",
		"@types/mocha": "8.2.1",
		"@types/multer": "1.4.5",
		"@types/node": "16.11.7",
		"@types/sinon": "9.0.11",
		"@types/sinon-chai": "3.2.5",
		"@types/superagent": "4.1.15",
		"@types/supertest": "2.0.10",
		"chai": "4.3.4",
		"chai-as-promised": "7.1.1",
		"concurrently": "6.0.0",
		"cross-env": "^7.0.3",
		"mocha": "8.3.2",
		"nodemon": "2.0.7",
		"nyc": "15.1.0",
		"pg": "8.5.1",
		"resolve-tspaths": "^0.8.0",
		"sinon": "9.2.4",
		"sinon-chai": "3.5.0",
		"supertest": "6.1.3",
		"ts-node": "10.9.1",
		"ts-node-dev": "2.0.0",
		"tsconfig-paths": "3.9.0",
		"typescript": "4.8.4"
	}
}
